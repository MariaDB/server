--source ../include/partition_fulltext_init.inc

--echo
--echo drop and create databases
--connection master_1
--disable_warnings
DROP DATABASE IF EXISTS auto_test_local;
CREATE DATABASE auto_test_local;
USE auto_test_local;
  --connection child2_1
    SET @old_log_output = @@global.log_output;
    SET GLOBAL log_output = 'TABLE,FILE';
  DROP DATABASE IF EXISTS auto_test_remote;
  CREATE DATABASE auto_test_remote;
  USE auto_test_remote;
  --connection child2_2
    SET @old_log_output = @@global.log_output;
    SET GLOBAL log_output = 'TABLE,FILE';
  DROP DATABASE IF EXISTS auto_test_remote2;
  CREATE DATABASE auto_test_remote2;
  USE auto_test_remote2;
  --connection child2_3
    SET @old_log_output = @@global.log_output;
    SET GLOBAL log_output = 'TABLE,FILE';
  DROP DATABASE IF EXISTS auto_test_remote3;
  CREATE DATABASE auto_test_remote3;
  USE auto_test_remote3;
--enable_warnings

--echo
--echo create table and insert
  --connection child2_1
    --disable_query_log
    echo CHILD2_1_DROP_TABLES;
    echo CHILD2_1_CREATE_TABLES;
  --disable_warnings
DROP TABLE IF EXISTS tbl_a;
  --enable_warnings
CREATE TABLE tbl_a (
pkey int NOT NULL,
words text NOT NULL,
PRIMARY KEY (pkey),
FULLTEXT (words)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;
    --enable_query_log
    TRUNCATE TABLE mysql.general_log;
  --connection child2_2
    --disable_query_log
    echo CHILD2_2_DROP_TABLES;
    echo CHILD2_2_CREATE_TABLES;
  --disable_warnings
DROP TABLE IF EXISTS tbl_a;
  --enable_warnings
CREATE TABLE tbl_a (
pkey int NOT NULL,
words text NOT NULL,
PRIMARY KEY (pkey),
FULLTEXT (words)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;
    --enable_query_log
    TRUNCATE TABLE mysql.general_log;
  --connection child2_3
    --disable_query_log
    echo CHILD2_3_DROP_TABLES;
    echo CHILD2_3_CREATE_TABLES;
  --disable_warnings
DROP TABLE IF EXISTS tbl_a;
  --enable_warnings
CREATE TABLE tbl_a (
pkey int NOT NULL,
words text NOT NULL,
PRIMARY KEY (pkey),
FULLTEXT (words)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;
    --enable_query_log
    TRUNCATE TABLE mysql.general_log;
--connection master_1
--disable_warnings
DROP TABLE IF EXISTS tbl_a;
DROP TABLE IF EXISTS tbl_b;
--enable_warnings
--disable_query_log
echo CREATE TABLE tbl_a (
    pkey int NOT NULL,
    words text NOT NULL,
    PRIMARY KEY (pkey),
    FULLTEXT (words)
) MASTER_1_ENGINE MASTER_1_CHARSET MASTER_1_COMMENT_2_1;
CREATE TABLE tbl_a (
    pkey int NOT NULL,
    words text NOT NULL,
    PRIMARY KEY (pkey),
    FULLTEXT (words)
) ENGINE=Spider DEFAULT CHARSET=utf8 COMMENT='table "tbl_a", bka_mode "1"'
  PARTITION BY KEY(pkey) (
PARTITION pt1 COMMENT='srv "s_2_1"',
PARTITION pt2 COMMENT='srv "s_2_2"',
PARTITION pt3 COMMENT='srv "s_2_3"'
  );
--enable_query_log
--disable_ps_protocol
INSERT INTO tbl_a (pkey, words) VALUES (0, 'abc'),(1, 'def'),(2, 'ghi'),(3, 'jkl'),(4, 'mno'),(5, 'pqr'),(6, 'stu'),(7, 'vwx');
--enable_ps_protocol

--echo
--echo select test
  --connection child2_1
    TRUNCATE TABLE mysql.general_log;
--connection master_1
--disable_ps2_protocol
SELECT pkey, words FROM tbl_a WHERE match(words) against('+ghi' in boolean mode);
  --connection child2_1
    --disable_view_protocol
SELECT argument FROM mysql.general_log WHERE command_type != 'Execute' AND argument LIKE '%select %';
    --enable_view_protocol
SELECT pkey FROM tbl_a ORDER BY pkey;
  --connection child2_2
    --disable_view_protocol
SELECT argument FROM mysql.general_log WHERE command_type != 'Execute' AND argument LIKE '%select %';
    --enable_view_protocol
SELECT pkey FROM tbl_a ORDER BY pkey;
  --connection child2_3
    --disable_view_protocol
SELECT argument FROM mysql.general_log WHERE command_type != 'Execute' AND argument LIKE '%select %';
    --enable_view_protocol
SELECT pkey FROM tbl_a ORDER BY pkey;
--enable_ps2_protocol


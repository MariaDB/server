    --enable_query_log
  }
  if ($USE_GENERAL_LOG)
  {
    TRUNCATE TABLE mysql.general_log;
  }
  if (!$OUTPUT_CHILD_GROUP2)
  {
    --enable_query_log
    --enable_result_log
  }
}
--connection master_1
--disable_warnings
DROP TABLE IF EXISTS tbl_a;
DROP TABLE IF EXISTS tbl_b;

SET DEFAULT_STORAGE_ENGINE = 'tokudb';
set GLOBAL tokudb_checkpoint_on_flush_logs=ON;
# Establish connection conn1 (user = root)
# should see nothing
select DB, command, state, info from information_schema.processlist order by info;
DB	command	state	info
test	Sleep		NULL
test	Sleep		NULL
test	Query	executing	select DB, command, state, info from information_schema.processlist order by info
flush logs;
# should see nothing
select DB, command, state, info from information_schema.processlist order by info;
DB	command	state	info
test	Sleep		NULL
test	Sleep		NULL
test	Query	executing	select DB, command, state, info from information_schema.processlist order by info
set session tokudb_checkpoint_lock=1;
flush logs;;
# should see a flush logs
select DB, command, state, info from information_schema.processlist order by info;
DB	command	state	info
test	Sleep		NULL
test	Query	init	flush logs
test	Query	executing	select DB, command, state, info from information_schema.processlist order by info
set session tokudb_checkpoint_lock=1;
# should still see a flush logs
select DB, command, state, info from information_schema.processlist order by info;
DB	command	state	info
test	Sleep		NULL
test	Query	init	flush logs
test	Query	executing	select DB, command, state, info from information_schema.processlist order by info
set session tokudb_checkpoint_lock=0;
# should still see a flush logs
select DB, command, state, info from information_schema.processlist order by info;
DB	command	state	info
test	Sleep		NULL
test	Query	init	flush logs
test	Query	executing	select DB, command, state, info from information_schema.processlist order by info
set session tokudb_checkpoint_lock=0;
# should see nothing
select DB, command, state, info from information_schema.processlist order by info;
DB	command	state	info
test	Sleep		NULL
test	Sleep		NULL
test	Query	executing	select DB, command, state, info from information_schema.processlist order by info
set GLOBAL tokudb_checkpoint_on_flush_logs=OFF;

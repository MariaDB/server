--disable_warnings
DROP TABLE IF EXISTS diaries;
--enable_warnings

CREATE TABLE diaries (
  id INT PRIMARY KEY AUTO_INCREMENT,
  title TEXT,
  created_at DATETIME
) DEFAULT CHARSET UTF8;

--error ER_TRUNCATED_WRONG_VALUE
INSERT INTO diaries (title, created_at)
       VALUES ('2012', '2012');

SELECT * FROM diaries;

DROP TABLE diaries;


SELECT * FROM memos
         WHERE MATCH(title) AGAINST("+1" IN BOOLEAN MODE) AND
               MATCH(content) AGAINST("+a" IN BOOLEAN MODE)
         ORDER BY id
         LIMIT 1,3;

SHOW STATUS LIKE 'mroonga_fast_order_limit';

DROP TABLE memos;


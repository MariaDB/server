--disable_warnings
DROP TABLE IF EXISTS scores;
--enable_warnings

CREATE TABLE scores (
  id INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
  name CHAR(30) NOT NULL,
  score INT NOT NULL,
  KEY property (score, name)
) DEFAULT CHARSET=UTF8;
SHOW CREATE TABLE scores;


SELECT * FROM mroonga_releases
         WHERE release_year <= "13" AND
               MATCH(release_title) AGAINST("Mroonga" IN BOOLEAN MODE)
         ORDER BY id DESC LIMIT 1,2;

SHOW STATUS LIKE 'mroonga_fast_order_limit';

DROP TABLE mroonga_releases;


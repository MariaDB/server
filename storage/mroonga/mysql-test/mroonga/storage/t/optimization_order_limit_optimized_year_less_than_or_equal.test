--source ../../include/mroonga/have_mroonga.inc

--disable_warnings
DROP TABLE IF EXISTS mroonga_releases;
--enable_warnings

FLUSH STATUS;

CREATE TABLE mroonga_releases (
  id INT PRIMARY KEY AUTO_INCREMENT,
  release_title TEXT,
  release_year YEAR,
  KEY (release_year),
  FULLTEXT KEY (release_title)
) DEFAULT CHARSET UTF8;


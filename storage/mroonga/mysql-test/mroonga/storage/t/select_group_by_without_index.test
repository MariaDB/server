SET NAMES utf8;
CREATE TABLE users (
  name varchar(40),
  age int
);

INSERT INTO users VALUES ("Alice",  20);
INSERT INTO users VALUES ("Bob",    20);
INSERT INTO users VALUES ("Charry", 29);

EXPLAIN SELECT *, COUNT(*) FROM users GROUP BY age;

SELECT *, COUNT(*) FROM users GROUP BY age;

DROP TABLE users;


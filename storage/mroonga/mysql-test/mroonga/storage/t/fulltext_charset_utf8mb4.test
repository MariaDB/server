SET NAMES utf8mb4;
CREATE TABLE diaries (
  id INT PRIMARY KEY,
  title VARCHAR(255) CHARSET utf8mb4 COLLATE utf8mb4_general_ci,
  content TEXT CHARSET utf8mb4 COLLATE utf8mb4_general_ci,
  FULLTEXT INDEX (content)
) DEFAULT CHARSET utf8mb4;

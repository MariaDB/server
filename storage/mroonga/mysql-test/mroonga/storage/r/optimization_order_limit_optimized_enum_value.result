DROP TABLE IF EXISTS memos;
FLUSH GLOBAL STATUS;
SET NAMES utf8;
CREATE TABLE memos (
id int PRIMARY KEY,
tag ENUM('Groonga', 'Mroonga'),
content TEXT,
FULLTEXT INDEX(content),
KEY(tag),
KEY(id)
) DEFAULT CHARSET=utf8;

SELECT *,       MATCH(title) AGAINST("groonga" IN BOOLEAN MODE) AS score
FROM diaries
WHERE    MATCH(title) AGAINST("groonga mroonga" IN BOOLEAN MODE)
ORDER BY MATCH(title) AGAINST("groonga" IN BOOLEAN MODE);

DROP TABLE IF EXISTS items;
CREATE TABLE items (
id INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
score1 INT,
score2 INT,
created_at DATETIME,
INDEX (created_at, score1, score2)
) DEFAULT CHARSET=UTF8;

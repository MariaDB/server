DROP TABLE IF EXISTS tags, bugs;
CREATE TABLE tags (
name VARCHAR(64) PRIMARY KEY
) DEFAULT CHARSET=utf8
COLLATE=utf8_bin;
CREATE TABLE bugs (
id INT UNSIGNED PRIMARY KEY,
tag TEXT COMMENT 'It references to tags.name, type "tags"'
) DEFAULT CHARSET=utf8;

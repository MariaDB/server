CREATE TABLE comments (
comment int unsigned PRIMARY KEY,
content text NOT NULL
);
CREATE TABLE articles (
content text NOT NULL,
comment int unsigned,
FOREIGN KEY (comment) REFERENCES comments (comment)
);

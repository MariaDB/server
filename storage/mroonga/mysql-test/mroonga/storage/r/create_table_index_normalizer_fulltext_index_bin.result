DROP TABLE IF EXISTS diaries;
SET NAMES utf8;
CREATE TABLE diaries (
day DATE PRIMARY KEY,
content VARCHAR(64) NOT NULL,
FULLTEXT INDEX (content) COMMENT 'normalizer "NormalizerAuto"'
) DEFAULT CHARSET=utf8 COLLATE=utf8_bin;

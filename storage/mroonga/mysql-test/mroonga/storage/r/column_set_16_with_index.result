DROP TABLE IF EXISTS items;
CREATE TABLE items (
name VARCHAR(255),
colors SET("black",
"dim gray",
"dark gray",
"gray",
"light gray",
"gainsboro",
"white smoke",
"white",
"red",
"orange red",
"dark orange",
"orange",
"gold",
"yellow",
"chartreuse",
"lawn green"),
INDEX (colors)
) DEFAULT CHARSET=utf8;

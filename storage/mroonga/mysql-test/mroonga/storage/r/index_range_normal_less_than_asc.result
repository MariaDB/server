DROP TABLE IF EXISTS ids;
SET NAMES UTF8;
CREATE TABLE ids (
id INT(10) UNSIGNED PRIMARY KEY AUTO_INCREMENT,
value INT(10),
INDEX (value)
) ENGINE=Mroonga DEFAULT CHARSET=utf8;

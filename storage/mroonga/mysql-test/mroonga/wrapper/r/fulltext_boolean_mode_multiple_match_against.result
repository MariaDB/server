DROP TABLE IF EXISTS diaries;
SET NAMES UTF8;
CREATE TABLE diaries (
id INT PRIMARY KEY,
title VARCHAR(255),
content TEXT,
FULLTEXT INDEX (title),
FULLTEXT INDEX (content)
) DEFAULT CHARSET = UTF8 COMMENT = 'ENGINE "InnoDB"';

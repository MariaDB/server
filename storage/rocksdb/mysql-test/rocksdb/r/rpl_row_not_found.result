create table t1(a int) engine=myisam;
insert into t1 select A.a + B.a* 10 + C.a * 100 from t0 A, t0 B, t0 C;
create table t2 (
pk int primary key,
kp1 int,
kp2 int,
col1 int,
key (kp1,kp2)
) engine=rocksdb;
insert into t2 select a,a,a,a from t1;
create table t3 like t2;
insert into t3 select * from t2;

let $statement= set @a:= f3();
let $restore_table= ;
--source include/check_concurrent_insert.inc
let $statement= select f4();
let $restore_table= ;
--source include/check_concurrent_insert.inc
let $statement= set @a:= f4();
let $restore_table= ;
--source include/check_concurrent_insert.inc

--echo #
--echo # 4.5. INSERT (or other statement which modifies data) with

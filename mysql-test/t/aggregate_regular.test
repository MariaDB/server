create aggregate function agg_test3(x INT, y varchar(10)) returns varchar(1000)
begin
   declare  str varchar(1000) default '';
   declare continue handler for not found return str;
   loop
       fetch group next row;
	   set str= concat(str,y);
   end loop;
end|


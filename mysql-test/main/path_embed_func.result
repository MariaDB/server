$$
CREATE DATABASE test4;
CREATE FUNCTION test4.func4() RETURNS TEXT
BEGIN
RETURN 'test4.func4';
END;
$$
#
# Embed a path in a stored function
#
SET PATH 'test2';
CREATE FUNCTION func() RETURNS TEXT
BEGIN
RETURN func2();
END;
$$

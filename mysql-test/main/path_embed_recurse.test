#SELECT ff();

--error ER_SP_RECURSION_LIMIT
CALL pp();
--error ER_SP_RECURSION_LIMIT
CALL pp();

SET max_sp_recursion_depth=10;
CALL pp();
CALL pp();

DROP FUNCTION ff;
DROP PROCEDURE pp;
DROP DATABASE test2;

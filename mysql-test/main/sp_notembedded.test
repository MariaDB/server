#
# Bug#6807 Stored procedure crash if CREATE PROCEDURE ... KILL QUERY
#
create procedure bug6807()
begin
  declare a int;

  set a = connection_id();
  kill query a;
  select 'Not reached';
end|

--error ER_QUERY_INTERRUPTED
call bug6807()|
--error ER_QUERY_INTERRUPTED
call bug6807()|

drop procedure bug6807|


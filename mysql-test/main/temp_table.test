  CREATE TEMPORARY TABLE temp_t1(i INT) ENGINE=INNODB;
  INSERT INTO temp_t1 VALUES(1);
  DROP TABLE temp_t1;
  RETURN 0;
END|

CREATE FUNCTION f2() RETURNS INT
BEGIN
  DROP TEMPORARY TABLE IF EXISTS temp_t1;
  CREATE TEMPORARY TABLE temp_t1(i INT) ENGINE=INNODB;
  INSERT INTO temp_t1 VALUES(1);
  DROP TEMPORARY TABLE temp_t1;
  RETURN 0;
END|
delimiter ;|

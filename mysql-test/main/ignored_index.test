--echo #
--echo # Using FORCE INDEX for an IGNORED index
--echo #

CREATE TABLE t1(a INT, key k1(a));
INSERT INTO t1 VALUES (1),(2),(3);

EXPLAIN SELECT * FROM t1 FORCE INDEX(k1);

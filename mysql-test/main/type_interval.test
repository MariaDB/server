CREATE TABLE t1 (a VARCHAR(128));
INSERT INTO t1 VALUES
('00:00:00'),
('+00:00:01'),
('-00:00:01'),
('838:59:59'),
('839:00:00'),
('2018:01:02'),
('87649415:59:59'),
('3652058 23:59:59'),
('87649416:00:00'),
('3652059 00:00:00');

SELECT
  EXTRACT(DAY FROM a) AS d,
  EXTRACT(HOUR FROM a) AS h,
  a,
  CAST(a AS INTERVAL DAY_SECOND(6)) AS cast_itds
FROM t1;

DROP TABLE t1;



connection con1;

# Add a lot of keys to slow down check
create table t1(n int not null, key(n), key(n), key(n), key(n));
let $1=10000;
--disable_query_log
begin;
while ($1)
{
 eval insert into t1 values ($1);
 dec $1;
}
commit;
--enable_query_log
send check table t1 extended;
connection con2;
insert into t1 values (200000);
connection con1;
reap;
connection default;
disconnect con1;
disconnect con2;
drop table t1;



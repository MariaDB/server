# MDEV-34642 Shutdown take indefinitely when /tmp is full.
#
call mtr.add_suppression("No space left on device");
call mtr.add_suppression("Retry in 60 secs");
connect  con1,localhost,root,,;
connection con1;
create table t1 (i int);
SET debug_dbug='+d,simulate_space_error';
insert into t1 values (1),(2),(3);;
connection default;
SET debug_dbug='-d,simulate_file_write_error';
# Horray, managed to shutdown
# restart
call mtr.add_suppression('is corrupt; try to repair it');
call mtr.add_suppression('Got an error from thread_id');
call mtr.add_suppression('M.* thread id .*, OS thread handle .*, query id .* localhost .*root Update');
FOUND 1 /Waiting for someone to free space/ in mysqld.1.err
drop table t1;

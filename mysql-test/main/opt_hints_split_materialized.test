  one_k T1, (select grp, count(*) from t1000 group by grp) TBL where TBL.grp=T1.a;

explain
select /*+ SPLIT_MATERIALIZED(TBL) */ *
from
  one_k T1, (select grp, count(*) from t1000 group by grp) TBL where TBL.grp=T1.a;


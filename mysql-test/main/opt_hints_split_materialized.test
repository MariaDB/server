--echo # default showing lateral derived optimization in use
explain
select t1.n1 from t1, (select n1, n2 from t1 where c1 = 'a' group by n1) as t
  where t.n1 = t1.n1 and t.n2 = t1.n2 and c1 = 'a' group by n1;


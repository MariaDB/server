--echo # this must not use filesort, either:
explain SELECT pk2
FROM t2 USE INDEX(key1)
WHERE pk1 = 123 AND col1 = 'video'
ORDER BY pk2 DESC LIMIT 21;

drop table t1, t2;

SET GLOBAL innodb_stats_persistent=@save_stats_persistent;

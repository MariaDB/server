CREATE PROCEDURE show_table()
BEGIN
SHOW CREATE TABLE t1;
SELECT VERSION FROM INFORMATION_SCHEMA.TABLES WHERE TABLE_NAME='t1' AND TABLE_SCHEMA='test';
SELECT * FROM t1 ORDER BY a,b;
END;
$$

CREATE TABLE t1 (i INT) ENGINE=InnoDB PARTITION BY HASH (i) PARTITIONS 2;
XA START 'xid';
INSERT INTO t1 VALUES (1),(2),(3),(4);

--connect (con1,localhost,root,,test)

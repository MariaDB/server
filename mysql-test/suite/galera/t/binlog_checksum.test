# Cleanup
DROP TABLE t1;
--connection node_1
SET @@GLOBAL.BINLOG_CHECKSUM = @binlog_checksum_saved;
--connection node_2
SET @@GLOBAL.BINLOG_CHECKSUM = @binlog_checksum_saved;


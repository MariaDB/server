USE test;
CREATE TABLE t1(c1 INT PRIMARY KEY) ENGINE=INNODB;
INSERT INTO t1 VALUES (1), (2), (3), (4), (5);
SELECT * FROM t1;
SELECT * FROM test.t1;

--echo
--echo # On node_2
--connection node_2
SELECT * FROM test.t1;

--let $galera_diff_statement = SELECT * FROM t1

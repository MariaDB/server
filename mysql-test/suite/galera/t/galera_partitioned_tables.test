  PARTITION BY KEY (v1)
  PARTITIONS 2;
CREATE OR REPLACE TABLE t2 (v1 INT NOT NULL PRIMARY KEY) ENGINE=MyISAM
  PARTITION BY KEY (v1)
  PARTITIONS 2;

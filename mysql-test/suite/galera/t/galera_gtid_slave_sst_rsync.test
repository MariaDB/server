--echo #Connection 2
--connection node_2
STOP SLAVE;
RESET SLAVE ALL;
set global wsrep_on=OFF;
reset master;
set global wsrep_on=ON;

--disable_warnings
set global gtid_slave_pos="";
--enable_warnings

--echo #Connection 1
--connection node_1
set global wsrep_on=OFF;
reset master;
set global wsrep_on=ON;
--echo #Connection 3
--connection node_3
reset master;

--connection node_2
CALL mtr.add_suppression("Ignoring server id for non bootstrap node");

--connection node_2
--reap

--connection node_1
# We expect no errors here, because the handler in insert_proc() caught the deadlock error
--reap
SELECT @errno = 1213;
SELECT * FROM t1;

--connection node_2
SELECT * FROM t1;

--connection node_1

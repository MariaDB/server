--source include/galera_cluster.inc

--connection node_1
CREATE TABLE t1 (f1 INTEGER) ENGINE=InnoDB; CREATE TABLE t2 (f1 INTEGER) ENGINE=InnoDB;

SHOW CREATE TABLE t1;
SHOW CREATE TABLE t2;

--connection node_2
SHOW CREATE TABLE t1;
SHOW CREATE TABLE t2;

--connection node_1

BEGIN
  DECLARE EXIT HANDLER FOR SQLEXCEPTION BEGIN END;
  UPDATE t1 SET f2 = 'b';
  INSERT INTO t1 VALUES (4, 'd');
END|
DELIMITER ;|

INSERT INTO t1 VALUES (1, 'a'), (3, 'a');

CREATE TABLE t (
id INT PRIMARY KEY,
b MEDIUMBLOB NULL,
c INT
) ENGINE=MyISAM;
INSERT INTO t VALUES
(1, REPEAT('a', 10000), 1),
(2, NULL, 2),
(3, REPEAT('b', 10000), 3),
(4, NULL, 4);
SELECT COUNT(*) FROM t WHERE b IS NULL;
COUNT(*)
2
SELECT COUNT(*) FROM t WHERE b <=> NULL;
COUNT(*)

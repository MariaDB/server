-- error 1050
create temporary table t1(i int);
-- disconnect con1

-- connection default
if (`SELECT FIND_IN_SET(@@BINLOG_FORMAT,@@CREATE_TEMPORARY_TABLE_BINLOG_FORMATS) > 0`)

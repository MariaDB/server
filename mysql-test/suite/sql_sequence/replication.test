select next value for s1;
select next_not_cached_value,cycle_count from s1;
select next value for s1;
select next_not_cached_value,cycle_count from s1;
drop sequence s1;

create sequence s1 start with 2 minvalue 1 maxvalue 3 increment by 3 cache 2 nocycle;
select next value for s1;
--error ER_SEQUENCE_RUN_OUT
select next value for s1;
drop sequence s1;


 col_datetime datetime(3) not null default '1900-01-01 00:00:00',
 col_time time(5) not null default '00:00:00',
 col_blob text,
 col_bit bit(34),
 col_year year,
 col_char char(10),
 col_dec decimal(18,9) not null default 0,

# vcol on vcol

create table t (c int, key (c));
insert into t select seq from seq_1_to_10000;
alter table t
  add column vc1 int as (c + 1),
  add index(vc1);
alter table t
  add column vc2 int as (vc1 * 2),
  add index(vc2);
explain select c from t group by vc2;

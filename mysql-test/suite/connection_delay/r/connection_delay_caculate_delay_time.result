# Connection delay tests for valid user accounts

# ----------------------------------------------------------------------

# Setup
# Create user accounts for testing
CREATE USER u1 IDENTIFIED BY 'abcd';
CREATE USER u2 IDENTIFIED BY 'abcd';
CREATE USER u3 IDENTIFIED BY 'abcd';
# Declare config variables
# Save original values of connection_delay variables
SET @saved_connections_threshold = @@global.password_errors_before_delay;
SET @saved_max_password_errors = @@global.max_password_errors;
SET @saved_timeout=@@global.connect_timeout;
SET @old_debug=@@global.debug_dbug;
SET @@global.debug_dbug="+d,skip_connection_delay";
# Set failed attempts to 3
SET @@global.password_errors_before_delay = 3;
# Current max password errors and timeout config
SELECT @@global.connect_timeout,@@global.max_password_errors,@@global.password_errors_before_delay;
@@global.connect_timeout	@@global.max_password_errors	@@global.password_errors_before_delay
60	4294967295	3
SELECT @@debug_dbug;
@@debug_dbug
d,info,skip_connection_delay:f,connection_delay_for_user

# ----------------------------------------------------------------------

# Make enough failed attempts to trigger delays
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
SET @@global.connect_timeout=DEFAULT;
SET @@global.max_password_errors=DEFAULT;
connection default;
# Connection attempt should fail.
FOUND 1 /The step for connection delay is 2 nanoseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 2 nanoseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 2 /The step for connection delay is 2 nanoseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 4 nanoseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 3 /The step for connection delay is 2 nanoseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 6 nanoseconds/ in mysqld.1.err
# --------------Set timeout to default and max_password_errors to 100-----------------
SET @@global.connect_timeout=DEFAULT;
SET @@global.max_password_errors=100;
connection default;
# Connection attempt should fail.
FOUND 1 /The step for connection delay is 103092783 nanoseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 412371132 nanoseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 2 /The step for connection delay is 103092783 nanoseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 515463915 nanoseconds/ in mysqld.1.err
# --------------Set timeout to 24h and max_password_errors to 100-----------------
SET @@global.connect_timeout=86400;
SET @@global.max_password_errors=100;
connection default;
# Connection attempt should fail.
FOUND 1 /The step for connection delay is 890721649484 nanoseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 5344329896904 nanoseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 2 /The step for connection delay is 890721649484 nanoseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 6235051546388 nanoseconds/ in mysqld.1.err
# --------------Set  timeout  to 60 second and max_password_errors to 100-----------------
SET @@global.connect_timeout=60;
SET @@global.max_password_errors=100;
connection default;
# Connection attempt should fail.
FOUND 1 /The step for connection delay is 618556701 nanoseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 4948453608 nanoseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 2 /The step for connection delay is 618556701 nanoseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 5567010309 nanoseconds/ in mysqld.1.err
#-----------------------Reach max password errors , server reject connection
SET @@global.max_password_errors=12;
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
ERROR HY000: User is blocked because of too many credential errors; unblock with 'FLUSH PRIVILEGES'

# ----------------------------------------------------------------------

# Cleanup
connection default;
# Restore original values of connection delay variables
SET @@global.password_errors_before_delay = @saved_connections_threshold;
SET @@global.max_password_errors = @saved_max_password_errors;
SET @@global.connect_timeout = @saved_timeout;
SET @@global.debug_dbug=@old_debug;
# Remove user accounts created for the test
DROP USER u1;
DROP USER u2;
DROP USER u3;


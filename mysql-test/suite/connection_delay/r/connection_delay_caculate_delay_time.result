# Connection delay tests for valid user accounts

# ----------------------------------------------------------------------

# Setup
# Create user accounts for testing
CREATE USER u1 IDENTIFIED BY 'abcd';
CREATE USER u2 IDENTIFIED BY 'abcd';
CREATE USER u3 IDENTIFIED BY 'abcd';
# Declare config variables
# Save original values of connection_delay variables
SET @saved_connections_threshold = @@global.password_errors_before_delay;
SET @saved_max_password_errors = @@global.max_password_errors;
SET @saved_read_timeout=@@global.net_read_timeout;
SET @old_debug=@@global.debug_dbug;
SET @@global.debug_dbug="+d,skip_connection_delay";
# Set failed attempts to 3
SET @@global.password_errors_before_delay = 3;
# Current max password errors and timeout config
SELECT @@global.net_read_timeout,@@global.max_password_errors,@@global.password_errors_before_delay;
@@global.net_read_timeout	@@global.max_password_errors	@@global.password_errors_before_delay
30	4294967295	3
SELECT @@debug_dbug;
@@debug_dbug
d,info,skip_connection_delay:f,connection_delay_for_user

# ----------------------------------------------------------------------

# Make enough failed attempts to trigger delays
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
SET @@global.net_read_timeout=DEFAULT;
SET @@global.max_password_errors=DEFAULT;
connection default;
# Connection attempt should fail.
FOUND 1 /The step for connection delay is 1000 milliseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 2 /The step for connection delay is 1000 milliseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 2000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 3 /The step for connection delay is 1000 milliseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 3000 milliseconds/ in mysqld.1.err
# --------------Set timeout to default and max_password_errors to 100-----------------
SET @@global.net_read_timeout=DEFAULT;
SET @@global.max_password_errors=100;
connection default;
# Connection attempt should fail.
FOUND 4 /The step for connection delay is 1000 milliseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 4000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 5 /The step for connection delay is 1000 milliseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 5000 milliseconds/ in mysqld.1.err
# --------------Set timeout to 24h and max_password_errors to 100-----------------
SET @@global.net_read_timeout=86400;
SET @@global.max_password_errors=100;
connection default;
# Connection attempt should fail.
FOUND 1 /The step for connection delay is 890721 milliseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 5344326 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 2 /The step for connection delay is 890721 milliseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 6235047 milliseconds/ in mysqld.1.err
# --------------Set  timeout  to 60 second and max_password_errors to 100-----------------
SET @@global.net_read_timeout=60;
SET @@global.max_password_errors=100;
connection default;
# Connection attempt should fail.
FOUND 6 /The step for connection delay is 1000 milliseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 8000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 7 /The step for connection delay is 1000 milliseconds/ in mysqld.1.err
FOUND 1 /u1@% wait 9000 milliseconds/ in mysqld.1.err
#-----------------------Reach max password errors , server reject connection
SET @@global.max_password_errors=12;
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
ERROR HY000: User is blocked because of too many credential errors; unblock with 'FLUSH PRIVILEGES'

# ----------------------------------------------------------------------

# Cleanup
connection default;
# Restore original values of connection delay variables
SET @@global.password_errors_before_delay = @saved_connections_threshold;
SET @@global.max_password_errors = @saved_max_password_errors;
SET @@global.net_read_timeout = @saved_read_timeout;
SET GLOBAL DEBUG_DBUG=@old_debug;
# Remove user accounts created for the test
DROP USER u1;
DROP USER u2;
DROP USER u3;

# ----------------------------------------------------------------------

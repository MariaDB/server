# Connection delay tests for valid user accounts

# ----------------------------------------------------------------------

# Setup
# Create user accounts for testing
CREATE USER u1 IDENTIFIED BY 'abcd';
CREATE USER u2 IDENTIFIED BY 'abcd';
CREATE USER u3 IDENTIFIED BY 'abcd';
# Save original values of connection_delay variables
SET @saved_connections_threshold = @@global.failed_attempts_before_delay;
# Set small values for connection_delay variables
SET @@global.failed_attempts_before_delay = 3;
# Current max password errors and timeout config
select @@wait_timeout,@@interactive_timeout,@@max_password_errors;
@@wait_timeout	@@interactive_timeout	@@max_password_errors
28800	28800	4294967295
select @@debug_dbug;
@@debug_dbug
d,info:f,connection_delay_for_user
select @@global.failed_attempts_before_delay;
@@global.failed_attempts_before_delay
3

# ----------------------------------------------------------------------

# Make enough failed attempts to trigger delays
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
connect(localhost,u2,efgh,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u2, localhost, u2,efgh,,,,;
connect(localhost,u2,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u2, localhost, u2,haha,,,,;
connect(localhost,u2,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u2, localhost, u2,haha,,,,;
connect(localhost,u3,efgh,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u3, localhost, u3,efgh,,,,;
connect(localhost,u3,efgh,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u3, localhost, u3,efgh,,,,;
connect(localhost,u3,efgh,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u3, localhost, u3,efgh,,,,;

# Following attempts will experience delay in server response
connection default;
# Connection attempt should fail.
FOUND 1 /u1@% wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 1 /u2@% wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 1 /u3@% wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should succeed.
FOUND 2 /u3@% wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should succeed.
FOUND 2 /u2@% wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should succeed.
FOUND 2 /u1@% wait 1000 milliseconds/ in mysqld.1.err

# Following attempts will not experience any delay in server response
# Failed login after a successful login
connection default;
# Connection attempt should fail.
FOUND 2 /u1@% wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 2 /u2@% wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 2 /u3@% wait 1000 milliseconds/ in mysqld.1.err
# Successful login will not get delay response
connection default;
# Connection attempt should succeed.
FOUND 2 /u1@% wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should succeed.
FOUND 2 /u2@% wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should succeed.
FOUND 2 /u3@% wait 1000 milliseconds/ in mysqld.1.err

# ----------------------------------------------------------------------

# Cleanup
connection default;
# Restore original values of connection delay variables
SET @@global.failed_attempts_before_delay = @saved_connections_threshold;
# Remove user accounts created for the test
DROP USER u1;
DROP USER u2;
DROP USER u3;

# ----------------------------------------------------------------------

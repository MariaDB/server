# Connection delay tests for valid user accounts

# ----------------------------------------------------------------------

# Setup
# Create user account for testing
CREATE USER u1 IDENTIFIED BY 'abcd';
# Save original values of connection_control variables
SET @saved_connections_threshold = @@global.failed_connections_threshold;
# Set small values for connection_control variables
SET @@global.failed_connections_threshold = 3;

# ----------------------------------------------------------------------

# Make enough failed attempts to trigger delays
connect(localhost,u1,,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,,,,,;
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;

# Following attempts will experience delay in server response
connection default;
# Connection attempt should fail.
FOUND 1 /u1@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 2 /u1@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 1 /u1@localhost wait 3000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 1 /u1@localhost wait 4000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 1 /u1@localhost wait 5000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 1 /u1@localhost wait 6000 miliseconds/ in mysqld.1.err

# Following attempts will not experience any delay in server response
connection default;
# Connection attempt should fail.
connection default;
# Connection attempt should succeed.

# ----------------------------------------------------------------------

# Cleanup
connection default;
# Restore original values of conenction_control variables
SET @@global.failed_connections_threshold = @saved_connections_threshold;
# Remove user account created for the test
DROP USER u1;

# ----------------------------------------------------------------------

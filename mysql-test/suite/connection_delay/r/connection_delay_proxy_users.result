#-----------------------------------------------------------------------
# Setup
# Do proxy setup
CALL mtr.add_suppression("Plugin test_plugin_server reported: 'Wrong password supplied for proxied'");
# Save original values of connection_delay variables
SET @saved_connections_threshold = @@global.password_errors_before_delay;
SET @saved_max_password_errors = @@global.max_password_errors;
SET @saved_read_timeout=@@global.net_read_timeout;
SET @old_debug=@@global.debug_dbug;
SET @@global.password_errors_before_delay = 3;
SET @@global.debug_dbug="+d,skip_connection_delay";
#-----------------------------------------------------------------------
# Case 1 : Tests for valid user accounts
# Make enough failed attempts to trigger delays
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
connect(localhost,u1,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,haha,,,,;
connect(localhost,u1,efgh,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u1, localhost, u1,efgh,,,,;
connect(localhost,u3,efgh,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u3, localhost, u3,efgh,,,,;
connect(localhost,u3,efgh,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u3, localhost, u3,efgh,,,,;
connect(localhost,u3,efgh,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u3, localhost, u3,efgh,,,,;
connect(localhost,u2,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u2, localhost, u2,haha,,,,;
connect(localhost,u2,efgh,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u2, localhost, u2,efgh,,,;
connect(localhost,u2,haha,test,MASTER_PORT,MASTER_SOCKET);
connect fail_con_u2, localhost, u2,haha,,,,;

# Following attempts will experience delay in server response
connection default;
# Connection attempt should fail.
FOUND 1 /u1@localhost wait 1000 milliseconds/ in mysqld.1.err

connection default;
# Connection attempt should fail.
FOUND 1 /u2@localhost wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 1 /u3@localhost wait 1000 milliseconds/ in mysqld.1.err
#---------------------------Trying with valid passwords--------------------------------
connection default;
# Connection attempt should succeed.
FOUND 1 /u3@localhost wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should succeed.
FOUND 1 /u2@localhost wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should succeed.
FOUND 1 /u1@localhost wait 1000 milliseconds/ in mysqld.1.err
# Following attempts will not experience any delay in server response
connection default;
# Connection attempt should fail.
FOUND 1 /u1@localhost wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 1 /u2@localhost wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 1 /u3@localhost wait 1000 milliseconds/ in mysqld.1.err
#--------------------------------------------Successful login----------------------------------
connection default;
# Connection attempt should succeed.
FOUND 1 /u1@localhost wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should succeed.
FOUND 1 /u2@localhost wait 1000 milliseconds/ in mysqld.1.err
connection default;
# Connection attempt should succeed.
FOUND 1 /u3@localhost wait 1000 milliseconds/ in mysqld.1.err
#-----------------------------------------------------------------------
# Cleanup
connection default;
# Restore original values of connection delay variables
SET @@global.password_errors_before_delay = @saved_connections_threshold;
SET @@global.max_password_errors = @saved_max_password_errors;
SET @@global.net_read_timeout = @saved_read_timeout;
SET GLOBAL DEBUG_DBUG=@old_debug;
# Remove user accounts
#-----------------------------------------------------------------------

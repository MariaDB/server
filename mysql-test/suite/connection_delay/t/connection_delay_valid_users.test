connect(fail_con_u3, localhost, u3,efgh,,,,);

--replace_result $MASTER_MYSOCK MASTER_SOCKET $MASTER_MYPORT MASTER_PORT
--error ER_ACCESS_DENIED_ERROR
connect(fail_con_u3, localhost, u3,efgh,,,,);

--replace_result $MASTER_MYSOCK MASTER_SOCKET $MASTER_MYPORT MASTER_PORT

--error ER_ACCESS_DENIED_ERROR
connect(fail_con_u3, localhost, u3,efgh,,,,);

enable_result_log;
let $failed_count=3;

--echo
--echo # Following attempts will experience delay in server response

let $HOST=%;

# Trying with invalid passwords
inc $failed_count;
let $USER=u1;
let $PASSWORD=hoho;
let $SUCCESS=0;

--source ../inc/client_connection.inc
--source ../inc/check_delay.inc



let $USER=u2;
let $PASSWORD=hoho;
let $SUCCESS=0;
--source ../inc/client_connection.inc
--source ../inc/check_delay.inc



let $USER=u3;
let $PASSWORD=hoho;
let $SUCCESS=0;
--source ../inc/client_connection.inc
--source ../inc/check_delay.inc

# Trying with valid passwords
let $failed_count=0;

let $USER=u3;
let $PASSWORD=abcd;
let $SUCCESS=1;
--source ../inc/client_connection.inc
--source ../inc/check_no_delay.inc


let $USER=u2;
let $PASSWORD=abcd;
let $SUCCESS=1;
--source ../inc/client_connection.inc
--source ../inc/check_no_delay.inc


let $USER=u1;
let $PASSWORD=abcd;
let $SUCCESS=1;
--source ../inc/client_connection.inc
--source ../inc/check_no_delay.inc

--echo
--echo # Following attempts will not experience any delay in server response
--echo # Failed login after a successful login
inc $failed_count;
let $USER=u1;
let $PASSWORD=hoho;
let $SUCCESS=0;

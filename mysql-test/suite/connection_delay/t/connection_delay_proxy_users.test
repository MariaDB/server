connect(fail_con_u2, localhost, u2,haha,,,,);



enable_result_log;

let $HOST=localhost;
let $DELAY_MIN_RESPONSE_TIME= 1000;

# Even though u1@localhost, u2@localhost and u3@localhost are
# proxying same user - proxied@localhost, we will not use
# proxied@localhost for recording failed attempts information.
# Rather, we will rely on proxying users' data.
# So each of the following should get delay of 2 seconds
# or more.

--echo
--echo # u1@localhost will not experience delay in server response , because auth plugin for u1  return code is plugin error
# Trying with invalid passwords

let $USER=u1;
let $PASSWORD=hoho;
let $SUCCESS=0;

--source ../inc/check_connection_delay.inc

let $SERVER_RESPONSE_TIME= $DELAY_MIN_RESPONSE_TIME;
--source ../inc/check_response_delay_time.inc

--echo # Following attempts will experience delay in server response, because auth plugin for u2 and u3 return code is bad credentials

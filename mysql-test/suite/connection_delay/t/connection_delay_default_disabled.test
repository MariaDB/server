connect(fail_con_u3, localhost, u3,efgh,,,,);

--replace_result $MASTER_MYSOCK MASTER_SOCKET $MASTER_MYPORT MASTER_PORT
--error ER_ACCESS_DENIED_ERROR
connect(fail_con_u3, localhost, u3,efgh,,,,);

--replace_result $MASTER_MYSOCK MASTER_SOCKET $MASTER_MYPORT MASTER_PORT

--error ER_ACCESS_DENIED_ERROR
connect(fail_con_u3, localhost, u3,efgh,,,,);

enable_result_log;

--echo
--echo # Following attempts will not experience delay in server response , because connection delay is disabled by default
let $failed_count=3;
let $HOST=localhost;

# Trying with invalid passwords
inc $failed_count;
let $USER=u1;
let $PASSWORD=hoho;
let $SUCCESS=0;

--source ../inc/client_connection.inc
--source ../inc/check_no_delay.inc


let $USER=u2;
let $PASSWORD=hoho;
let $SUCCESS=0;
--source ../inc/client_connection.inc
--source ../inc/check_no_delay.inc



let $USER=u3;
let $PASSWORD=hoho;
let $SUCCESS=0;
--source ../inc/client_connection.inc
--source ../inc/check_no_delay.inc

# Trying with valid passwords
let $failed_count=0;

let $USER=u3;
let $PASSWORD=abcd;
let $SUCCESS=1;
--source ../inc/client_connection.inc
--source ../inc/check_no_delay.inc


let $USER=u2;
let $PASSWORD=abcd;
let $SUCCESS=1;
--source ../inc/client_connection.inc
--source ../inc/check_no_delay.inc


let $USER=u1;
let $PASSWORD=abcd;
let $SUCCESS=1;
--source ../inc/client_connection.inc
--source ../inc/check_no_delay.inc


--echo
--echo # ----------------------------------------------------------------------
--echo

--echo # Cleanup

connection default;

--echo # Remove user accounts created for the test
DROP USER u1@localhost;
DROP USER u2@localhost;
DROP USER u3@localhost;


--echo # Call without connection name -- works (expected -1)
select master_pos_wait('master-bin.000001',1000000,1);

set default_master_connection = '';

--echo # Call for non-existing anonymous connection -- works (expected NULL)
select master_pos_wait('master-bin.000001',1000000,1);


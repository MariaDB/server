connection server_1_con2;
#-- Wait until master recognizes a connection is awaiting semi-sync ACK
#-- Begin master shutdown
SHUTDOWN WAIT FOR ALL SLAVES;
connection server_1;
ERROR HY000: Lost connection to server during query

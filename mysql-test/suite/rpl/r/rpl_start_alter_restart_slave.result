connection master;
drop table t1,t2,t3;
set global binlog_alter_two_phase = 0;
SET GLOBAL debug_dbug= @old_debug_master;
set DEBUG_SYNC= 'RESET';
connection slave;
stop slave;
set global slave_parallel_threads = 0;;
set global slave_parallel_mode = optimistic;;

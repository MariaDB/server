grant replication slave on *.* to replssl@localhost require ssl;
create table t1 (t int);
stop slave;
include/wait_for_slave_to_stop.inc
change master to master_user='replssl',master_password='';
start slave;
insert into t1 values (1);
select * from t1;
t
stop slave;

XA END 'b';
XA PREPARE 'b';
connection default;
FLUSH BINARY LOGS;
connect con2,localhost,root,,;
BEGIN;
INSERT INTO t1 VALUES (21, REPEAT('d', 100000));
connect con3,localhost,root,,;

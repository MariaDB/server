# Connection delay tests for valid user accounts

# ----------------------------------------------------------------------

# Setup
# Install connection_control plugin
# Save original values of connection_control variables
SET @saved_connections_threshold = @@global.failed_connections_threshold;
# Set small values for connection_control variables
SET @@global.failed_connections_threshold = 3;

# ----------------------------------------------------------------------

# Following attempts will not experience any delay in server respose
connection default;
# Connection attempt should fail.
NOT FOUND /u1@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
NOT FOUND /u2@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
NOT FOUND /u3@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
NOT FOUND /u1@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
NOT FOUND /u2@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
NOT FOUND /u3@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
NOT FOUND /u1@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
NOT FOUND /u2@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
NOT FOUND /u3@localhost wait 2000 miliseconds/ in mysqld.1.err

# Following attempts will experience delay in server respose
connection default;
# Connection attempt should fail.
FOUND 1 /u1@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 1 /u2@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 1 /u3@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 2 /u1@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 2 /u2@localhost wait 2000 miliseconds/ in mysqld.1.err
connection default;
# Connection attempt should fail.
FOUND 2 /u3@localhost wait 2000 miliseconds/ in mysqld.1.err

# ----------------------------------------------------------------------

# Cleanup
connection default;
# Restore original values of conenction_control variables
SET @@global.failed_connections_threshold = @saved_connections_threshold;

# ----------------------------------------------------------------------

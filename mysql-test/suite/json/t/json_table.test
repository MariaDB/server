FROM
  t1 RIGHT JOIN
     t2 AS tt
     LEFT JOIN
     JSON_TABLE(tt.c, '$' COLUMNS(o FOR ORDINALITY)) AS jt
     ON tt.b = jt.o
  ON t1.a = tt.b;


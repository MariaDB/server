FROM
  t1 RIGHT JOIN
    v2 AS tt
    LEFT JOIN
    JSON_TABLE(tt.c, '$' COLUMNS(o FOR ORDINALITY)) AS jt
    ON tt.b = jt.o
  ON t1.a = tt.b;

SELECT *
FROM
  t1 RIGHT JOIN
    v2 AS tt
    LEFT JOIN
    JSON_TABLE(CONCAT(tt.c,''), '$' COLUMNS(o FOR ORDINALITY)) AS jt
    ON tt.b = jt.o
 ON t1.a = tt.b;

prepare s from
"SELECT *
FROM
  t1 RIGHT JOIN
    v2 AS tt
    LEFT JOIN
    JSON_TABLE(CONCAT(tt.c,''), '$' COLUMNS(o FOR ORDINALITY)) AS jt
    ON tt.b = jt.o
 ON t1.a = tt.b";
execute s;

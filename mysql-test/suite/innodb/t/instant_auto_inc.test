create table t(id int primary key, a int) engine=InnoDB;
insert into t (id, a) values (1, 1);
alter table t modify column id int auto_increment, algorithm=instant;
check table t;
insert into t (a) values (2);
alter table t modify column id int auto_increment, algorithm=instant;
check table t;
insert into t (id, a) values (3, 3);
select * from t;
check table t;
drop table t;

create table t (id int primary key, a int) engine=innodb;
set auto_increment_increment = 100;
set auto_increment_offset= 20;
alter table t modify column id int auto_increment, algorithm=instant;
insert into t values (default, 1);
insert into t values (default, 2);
insert into t values (default, 3);
select * from t;
drop table t;
set auto_increment_increment = 1;
set auto_increment_offset = 1;

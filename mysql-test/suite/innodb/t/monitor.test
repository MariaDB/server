  id INT NOT NULL PRIMARY KEY,
  fl1_id INT,
  CONSTRAINT `fkl1`
    FOREIGN KEY (fl1_id) REFERENCES fl1 (id)
    ON DELETE CASCADE
    ON UPDATE SET NULL
) ENGINE = InnoDB;


perl;
do "$ENV{MTR_SUITE_DIR}/include/innodb-util.pl";
ib_discard_tablespaces("test", "t1");
ib_restore_tablespaces("test", "t1");
EOF

SET @save_dbug=@@debug_dbug;
SET DEBUG_DBUG="+d,ib_import_fts_error";
--error ER_DUP_KEY

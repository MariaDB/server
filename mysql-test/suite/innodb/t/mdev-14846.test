CREATE TABLE t1 (
 pk INT,
 f1 VARCHAR(10) NOT NULL,
 f2 VARCHAR(10) NULL,
 f3 INT UNSIGNED NULL,
 KEY (f1),
 PRIMARY KEY (pk)
) ENGINE=InnoDB;

CREATE OR REPLACE ALGORITHM=MERGE VIEW v4 AS SELECT * FROM t1;

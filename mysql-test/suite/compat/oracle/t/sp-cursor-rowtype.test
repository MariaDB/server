--echo # Make sure "rec" shadows other declarations outside the loop

CREATE TABLE t1 (a INT, b VARCHAR(10));
INSERT INTO t1 VALUES (10, 'b0');
DELIMITER $$;
CREATE PROCEDURE p1 AS
  rec INT:=10;
  CURSOR c1 IS SELECT a,b FROM t1;

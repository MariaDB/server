############## mysql-test\t\numa_enable_basic.test ############################
#                                                                             #
# Variable Name: numa_enable                                                  #
# Scope: GLOBAL                                                               #
# Access Type: Dynamic                                                        #
# Data Type: numeric                                                          #
# Default Value: 0                                                            #
# Range: -                                                                    #
#                                                                             #
#                                                                             #
# Creation Date: 2017-07-07                                                   #
# Author:  Sumit Lakra                                                        #
#                                                                             #
# Description: Test Cases of Dynamic System Variable numa_enable              #
#              that checks the behavior of this variable in the following ways#
#              * Default Value                                                #
#              * Valid & Invalid values                                       #
#              * Scope & Access method                                        #
#              * Data Integrity                                               #
#                                                                             #
# Reference: http://dev.mysql.com/doc/refman/5.1/en/                          #
#  server-system-variables.html                                               #
#                                                                             #
###############################################################################

--source include/load_sysvars.inc

SELECT @@GLOBAL.numa_enable;

--error ER_INCORRECT_GLOBAL_LOCAL_VAR
SELECT @@SESSION.numa_enable;

SELECT IF(@@global.numa_enable, "ON", "OFF") = VARIABLE_VALUE 
FROM INFORMATION_SCHEMA.GLOBAL_VARIABLES 
WHERE VARIABLE_NAME='numa_enable';

SELECT IF(@@numa_enable, "ON", "OFF") = VARIABLE_VALUE 
FROM INFORMATION_SCHEMA.SESSION_VARIABLES 
WHERE VARIABLE_NAME='numa_enable';

SELECT @@numa_enable = @@global.numa_enable;

######################################################################## 
#                    END OF numa_enable TESTS                          #

SET sql_mode=ORACLE;

--echo #
--echo # MDEV-10152 Add support for TYPE .. IS REF CURSOR
--echo #

DELIMITER $$;
CREATE PROCEDURE p0 AS
BEGIN
  IF @debug_ref_cursor IS TRUE
  THEN
    EXECUTE IMMEDIATE 'SHOW PROCEDURE CODE p1';
  END IF;
  CALL p1;
END;
$$
DELIMITER ;$$

--echo #
--echo # REF CURSOR with RETURN, with FETCH INTO record_variable
--echo # VARCHAR to INT to VARCHAR conversion
--echo #

DELIMITER $$;
CREATE PROCEDURE p1 AS
  TYPE rec0_t IS RECORD (a INT, b INT);
  TYPE rec1_t IS RECORD (a INT, b VARCHAR(10));
  TYPE cur0_t IS REF CURSOR RETURN rec0_t;
  c0 cur0_t;
  v0 rec1_t;
BEGIN
  OPEN c0 FOR SELECT '1', '2 ' FROM DUAL;
  FETCH c0 INTO v0;
  SELECT LENGTH(v0.a) || ' ' || LENGTH(v0.b) || ' <'|| v0.a || '><'|| v0.b || '> ' AS line;
  CLOSE c0;
END;
$$
DELIMITER ;$$
CALL p0;
DROP PROCEDURE p1;


--echo #
--echo # REF CURSOR with RETURN, with FETCH INTO record_variable
--echo # VARCHAR to INT to VARCHAR conversion
--echo # Using table ROWTYPE
--echo #

CREATE TABLE table_sample (a INT, b INT);
DELIMITER $$;
CREATE PROCEDURE p1 AS
  TYPE rec1_t IS RECORD (a INT, b VARCHAR(10));
  TYPE cur0_t IS REF CURSOR RETURN table_sample%ROWTYPE;
  c0 cur0_t;
  v0 rec1_t;
BEGIN
  OPEN c0 FOR SELECT 1,'2 ' FROM DUAL;
  FETCH c0 INTO v0;
  SELECT LENGTH(v0.a) || ' ' || LENGTH(v0.b) || ' <'|| v0.a || '><'|| v0.b || '> ' AS line;
  CLOSE c0;
END;
$$
DELIMITER ;$$
CALL p0;
DROP PROCEDURE p1;
DROP TABLE table_sample;


--echo #
--echo # REF CURSOR with RETURN, with FETCH INTO record_variable
--echo # VARCHAR to INT to VARCHAR conversion
--echo # Using cursor ROWTYPE
--echo #

CREATE TABLE t1 (a INT, b VARCHAR(10));
INSERT INTO t1 VALUES (1,'2 ');

DELIMITER $$;
CREATE PROCEDURE p1 AS
  TYPE rec1_t IS RECORD (a INT, b VARCHAR(10));
  CURSOR cursor_sample IS SELECT a, CAST(b AS INT) AS b FROM t1;
  TYPE cur0_t IS REF CURSOR RETURN cursor_sample%ROWTYPE;
  c0 cur0_t;
  v0 rec1_t;
BEGIN
  OPEN c0 FOR SELECT a, b FROM t1;
  FETCH c0 INTO v0;
  CLOSE c0;
  SELECT LENGTH(v0.a) || ' ' || LENGTH(v0.b) || ' <'|| v0.a || '><'|| v0.b || '> ' AS line;
END;
$$
DELIMITER ;$$
CALL p0;
DROP PROCEDURE p1;
DROP TABLE t1;

DROP PROCEDURE p0;

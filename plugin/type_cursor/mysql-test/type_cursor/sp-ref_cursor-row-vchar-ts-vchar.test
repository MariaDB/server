SET sql_mode=ORACLE;

--echo #
--echo # MDEV-10152 Add support for TYPE .. IS REF CURSOR
--echo #

DELIMITER $$;
CREATE PROCEDURE p0 AS
BEGIN
  IF @debug_ref_cursor IS TRUE
  THEN
    EXECUTE IMMEDIATE 'SHOW PROCEDURE CODE p1';
  END IF;
  CALL p1;
END;
$$
DELIMITER ;$$

--echo #
--echo # REF CURSOR with RETURN, with FETCH INTO record_variable
--echo # VARCHAR to TIMESTAMP to VARCHAR conversion
--echo #

CREATE TABLE t1 (a INT, b VARCHAR(30));
INSERT INTO t1 VALUES (1,'2001-01-01 ');
INSERT INTO t1 VALUES (1,'2001-01-01 10:20:30.123 ');
INSERT INTO t1 VALUES (1,'2001-01-01 10:20:30.123456 ');

DELIMITER $$;
CREATE PROCEDURE p1 IS
  TYPE rec0_t IS RECORD (a INT, b TIMESTAMP(6));
  TYPE cur0_t IS REF CURSOR RETURN rec0_t;
  c0 cur0_t;
  v0 t1%ROWTYPE;
BEGIN
  OPEN c0 FOR SELECT * FROM t1;
  LOOP
    FETCH c0 INTO v0;
    EXIT WHEN c0%NOTFOUND;
    SELECT LENGTH(v0.a) || ' ' || LENGTH(v0.b) || ' <'|| v0.a || '><'|| v0.b || '>' AS line;
  END LOOP;
  CLOSE c0;
END;
$$
DELIMITER  ;$$

CALL p0;

DROP PROCEDURE p1;


--echo #
--echo # REF CURSOR with RETURN, with FETCH INTO record_variable
--echo # VARCHAR to TIMESTAMP to VARCHAR conversion
--echo # Using table%ROWTYPE
--echo #

CREATE TABLE table_sample (a INT, b TIMESTAMP(6));
DELIMITER $$;
CREATE PROCEDURE p1 IS
  TYPE cur0_t IS REF CURSOR RETURN table_sample%ROWTYPE;
  c0 cur0_t;
  v0 t1%ROWTYPE;
BEGIN
  OPEN c0 FOR SELECT * FROM t1;
  LOOP
    FETCH c0 INTO v0;
    EXIT WHEN c0%NOTFOUND;
    SELECT LENGTH(v0.a) || ' ' || LENGTH(v0.b) || ' <'|| v0.a || '><'|| v0.b || '>' AS line;
  END LOOP;
  CLOSE c0;
END;
$$
DELIMITER  ;$$

CALL p0;

DROP TABLE table_sample;
DROP PROCEDURE p1;


--echo #
--echo # REF CURSOR with RETURN, with FETCH INTO record_variable
--echo # VARCHAR to TIMESTAMP to VARCHAR conversion
--echo # Using cursor%ROWTYPE
--echo #

DELIMITER $$;
CREATE PROCEDURE p1 IS
  CURSOR cursor_sample IS SELECT a, CAST(b AS DATETIME(6)) AS b FROM t1;
  TYPE cur0_t IS REF CURSOR RETURN cursor_sample%ROWTYPE;
  c0 cur0_t;
  v0 t1%ROWTYPE;
BEGIN
  OPEN c0 FOR SELECT * FROM t1;
  LOOP
    FETCH c0 INTO v0;
    EXIT WHEN c0%NOTFOUND;
    SELECT LENGTH(v0.a) || ' ' || LENGTH(v0.b) || ' <'|| v0.a || '><'|| v0.b || '>' AS line;
  END LOOP;
  CLOSE c0;
END;
$$
DELIMITER  ;$$

CALL p0;

DROP PROCEDURE p1;


DROP TABLE t1;

DROP PROCEDURE p0;

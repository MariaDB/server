BEGIN
DECLARE v00 ROW(i00 INT, i01 iNT);
DECLARE r10 ROW(c00 SYS_REFCURSOR, c01 SYS_REFCURSOR);
DECLARE r11 TYPE OF r10;
CALL open2(r11);
CALL fetch2(r11, v00);
CALL close2(r11);
SELECT r11.c00, r11.c01, refs(0,3) AS refs, v00.i00, v00.i01;
